
    <div class="col">
        <div class="card border-secondary mb-3 rounded shadow-lg" style="max-width: 25rem; max-height: 20rem">
          <div class="custom-image-container d-flex align-items-center justify-content-center">
            <img class="card-img-top" src="<%= "#{recipe.image_url}" %>" alt="Card image cap">
          </div>
            <div class="card-body">
              <%= link_to recipe_path(recipe) do %>
                <h5 class="card-title"><%= "#{recipe.name}"%></h5>
              <%end%>
              <h6 class="card-subtitle mb-2 text-muted">Rating: <%= "#{recipe.rating}" %></h6>
              <div class="text-clamp">
                <p class="card-text"><%= "#{recipe.description}" %></p>
              </div>
            </div>
        </div>
    </div>
