<p style="color: green"><%= notice %></p>

<% content_for :title, "Recipes" %>

<div class= "container">

  <div class="row d-flex align-items-center justify-content-between mb-3 pr-4 mr-4">
   <div class="col-auto">
      <h1 class="mb-0">Recipes </h1>
    </div>
     <div class="col-auto">
      <%= link_to new_recipe_path(@category) do %>
        <button type="button" class="btn btn-success"> Add a Recipe <i class="fa-solid fa-plus"></i> </button>
      <% end %>
    </div>
  </div>
</div>

<div class="container" id="recipes">
<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
  <% end %>
</div>
</div>

<%= link_to "New recipe", new_recipe_path %>
