<p style="color: green"><%= notice %></p>


<%= render "banner", category: @category %>

<div class="container" id="recipes">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @category.bookmarks.each do |bookmark| %>
    <div class="col-auto">

        <div class="card border-secondary mb-3 rounded shadow-lg" style="max-width: 25rem; max-height: 20rem">

          <div class="custom-image-container d-flex align-items-center justify-content-center">
            <img class="card-img-top" src="<%= "#{bookmark.recipe.image_url}" %>" alt="Card image cap">
          </div>

          <div class="card-body">
            <%= link_to recipe_path(bookmark.recipe) do %>
              <h5 class="card-title"><%= "#{bookmark.recipe.name}"%></h5>
            <%end%>
            <h6 class="card-subtitle mb-2 text-muted">Rating: <%= "#{bookmark.recipe.rating}" %></h6>
            <div class="text-clamp">
              <p class="card-text"><%= "#{bookmark.recipe.description}" %></p>
            </div>
          </div>

          <div class="card-footer">
            <div class="row d-flex align-items-center justify-content-between pr-4 mr-4">
              <div class="col-auto">
                <i class="fa-solid fa-quote-left"></i><small class="text-body-secondary"><%="#{bookmark.comment}"%></small>
              </div>
              <div class="col-auto">
                <%= link_to bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-link" do %>
                  <i class="fas fa-trash"> </i>
                <%end%>
              </div>
            </div>
          </div>
        </div>
    </div>
    <%end%>
  </div>
</div>
</div>
